{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["src/app/shared/interfaces/*"],
      "@animations/*": ["src/app/shared/animations/*"],
      "@services/*": ["src/app/shared/services/*"],
      "@stores/*": ["src/app/shared/stores/*"],
      "@classes/*": ["src/app/shared/classes/*"],
      "@components/*": ["src/app/shared/components/*"],
      "@pipes/*": ["src/app/shared/pipes/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // this is for an error that shows up in npm run build from "node_modules/@angular/fire/angularfire2.d.ts." 
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typeRoots": ["node_modules/@types"],
  "types": [
    "firebase",
    "jquery"
 ],
}
